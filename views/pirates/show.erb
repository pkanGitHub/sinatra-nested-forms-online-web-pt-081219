<h1>Display your Pirate here</h1>

<div class="pirate">
    <p>Name: <%= @pirate.name %></p>
    <p>Weight: <%= @pirate.weight %> pounds</p>
    <p>Height: <%= @pirate.height %> inches</p>
</div></br>

<h2>Display your ship here</h2>
<% @ships.each do |ship| %>
    <div class="ship">
        <p>Name: <%= ship.name %></p>
        <p>Type: <%= ship.type %></p>
        <p>Booty: <%= ship.booty %></p>
    </div></br>
<% end %>